{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015", "es2017", "dom"],
    "allowJs": true,
    "jsx": "react",
    // "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "baseUrl": "./",
    "paths": {"components/*" : ["src/components/*"]},
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./src/**/*"]

}
